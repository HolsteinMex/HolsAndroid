<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.abetancourt.produccion.Hatos">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerHatos"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hato"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/spinnerHatos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Vaca"
        android:id="@+id/btnAgregarVaca"
        android:layout_weight="0.5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBuscarVaca"
        android:hint="Buscar Vaca"
        android:layout_below="@+id/spinnerHatos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnArriba"
        android:layout_toLeftOf="@+id/btnArriba" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listVacas"
        android:layout_above="@+id/btnAgregarVaca"
        android:layout_below="@+id/txtBuscarVaca" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horarios"
        android:id="@+id/btnOrdenas"
        android:layout_weight="0.5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Params"
        android:id="@+id/btnParams"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↑"
        android:id="@+id/btnArriba"
        android:textSize="23dp"
        android:layout_below="@+id/spinnerHatos"
        android:layout_toLeftOf="@+id/btnAbajo"
        android:layout_toStartOf="@+id/btnAbajo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓"
        android:id="@+id/btnAbajo"
        android:textSize="23dp"
        android:layout_below="@+id/spinnerHatos"
        android:layout_alignRight="@+id/btnOrdenas"
        android:layout_alignEnd="@+id/btnOrdenas" />


</RelativeLayout>
