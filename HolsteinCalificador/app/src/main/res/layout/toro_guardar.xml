<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnToroCancelar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar CalificaciÃ³n"
        android:id="@+id/btnToroGuardarCalif"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtToroCalif"
        android:layout_alignBottom="@+id/btnToroGuardarCalif"
        android:layout_toLeftOf="@+id/btnToroGuardarCalif"
        android:layout_toStartOf="@+id/btnToroGuardarCalif"
        android:hint="ptos."
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_alignParentTop="true" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerToroClase"
        android:layout_toLeftOf="@+id/txtToroCalif"
        android:layout_toStartOf="@+id/txtToroCalif"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true" />
</RelativeLayout>